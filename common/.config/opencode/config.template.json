{
  "$schema": "https://opencode.ai/config.json",
  "plugin":
  [
    "opencode-openai-codex-auth@4.3.0",
    "opencode-gemini-auth@1.3.6",
    "opencode-scheduler",
    "opencode-smart-voice-notify@latest"
  ],
  "mcp": {
    "kagi-ken": {
      "type": "local",
      "command": ["/home/lucky/.local/bin/opencode-kagi-ken-mcp"],
      "environment": {
      },
      "enabled": true
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
      },
      "enabled": true
    },
    "linear": {
      "type": "remote",
      "url": "https://mcp.linear.app/mcp",
      "enabled": true
    },
    "clickup": {
      "type": "local",
      "command": ["npx", "-y", "mcp-remote", "https://mcp.clickup.com/mcp"],
      "enabled": false
    },
    "home-assistant": {
      "type": "remote",
      "url": "https://home.1al.cc/api/mcp",
      "headers": {
        "Authorization": "Bearer {{pass://Main/Home Assistant/MCP API Key}}"
      },
      "enabled": false
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app"
    }
  }
}
